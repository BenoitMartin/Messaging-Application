<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_gradient"
tools:context=".LoginDisplayActivity">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/primary_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/button_message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_message_list"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button_write_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_write_message"
        android:bottomRightRadius="10dp"
        android:bottomLeftRadius="10dp"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp"
        android:background="@drawable/bg_button_rounded"
        android:textColor="@color/white" />
</LinearLayout>
</RelativeLayout>

